

<div class="row justify-content-center mt-2">
  <div class="col-5 p-3  border border-light rounded alert-dismissable fade show" id="page-content">
  
  <%= render '/shared/errors', obj: @article %>
  
  <%= form_with(model: @article, local: true) do |f| %>
  
        <div class="form-group ">
            <%= f.label :price, class: "col-form-label" %>
            
            <%= f.text_field :price, class: "form-control" %>
            
        </div>
        <div class="form-group ">
            <%= f.label :title, class: "col-form-label" %>
            
            <%= f.text_field :title, class: "form-control" %>
            
        </div>

        <div class="form-group ">
          <%= f.label :description, class: "col-form-label" %>
          
          <%= f.text_area :description, rows: 4, class: "form-control" %>
          
        </div>
        <div class="form-group">
        
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account"), class: "btn btn-outline-primary btn-lrg"%>
        
        </div>
      <%= link_to 'Return to main page', articles_path%>
      <% end  %>
  </div>
</div>
      