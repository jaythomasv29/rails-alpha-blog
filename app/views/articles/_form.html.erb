

<div class="row justify-content-center mt-5">
  <div class="col-5 p-3  border border-light rounded" id="page-content">
  <% if @article.errors.any? %>
    <h5>The following errors prevented the article from being created</h5>
    <% for msg in @article.errors.full_messages %>
    <div class="alert alert-warning" role="alert">
      <p class="small text-center"><%= msg %></p>
    </div>
    <% end %>
  <% end %>
  <%= form_with(model: @article, local: true) do |f| %>
        <div class="form-group ">
            <%= f.label :price, class: "col-form-label" %>
            
            <%= f.text_field :price, class: "form-control" %>
            
        </div>
        <div class="form-group ">
            <%= f.label :title, class: "col-form-label" %>
            
            <%= f.text_field :title, class: "form-control" %>
            
        </div>

        <div class="form-group ">
          <%= f.label :description, class: "col-form-label" %>
          
          <%= f.text_area :description, rows: 4, class: "form-control" %>
          
        </div>
        <div class="form-group">
        
        <%= f.submit class: "btn btn-outline-primary btn-lrg"%>
        
        </div>
      <%= link_to 'Return to main page', articles_path%>
      <% end  %>
  </div>
</div>
      