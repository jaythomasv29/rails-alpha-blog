<h1>Posts</h1>
<%= link_to "Create new post", new_article_path, method: :get%>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">($) Price</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <%  @articles.each do |article| %>
    <tr>
      <td><%= article.price %> </td>
      <td> <%= article.title%> </td>
      <td> <%= article.description%> </td>
      <td> <%= link_to "View", article, class: "btn btn-primary" %> <%= link_to "Edit", edit_article_path(article), method: :get, class: "btn btn-secondary"%> <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </tr>
    <% end %>
  </tbody>
</table>