<h1>SaleWorld</h1>
<%= link_to "Create new post", new_article_path, method: :get%>
<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan=3>Action</th>
    </tr>
  </thead>
  <tbody>
    <%  @articles.each do |article| %>
    <tr>
      <td><%= article.price %> </td>
      <td> <%= article.title%> </td>
      <td> <%= article.description%> </td>
      <td> <%= link_to "View", article %> <%= link_to "Edit", edit_article_path(article), method: :get%> <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" } %>
    </tr>
    <% end %>
  </tbody>
</table>