<div class="row justify-content-center mt-2">
<h1>Sign Up</h1>
  <div class="col-5 p-3  border border-light rounded alert-dismissable fade show" id="page-content">
  
<%= render '/shared/errors', obj: @user %>
 <%= form_with(model: @user, local: true) do |f| %>
          <div class="form-group ">
            <%= f.label :username, class: "col-form-label" %>
            
            <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
            
        </div>
        <div class="form-group ">
            <%= f.label :email, class: "col-form-label" %>
            
            <%= f.email_field :email, class: "form-control", placeholder: "Enter an email" %>
            
        </div>
        <div class="form-group ">
            <%= f.label :password, class: "col-form-label" %>
            
            <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
            
        </div>
        
        <div class="form-group">
        
        <%= f.submit class: "btn btn-outline-primary btn-lrg"%>
        
        </div>
      <%= link_to 'Return to main page', articles_path%>
      <% end  %>
</div>
</div>